@using TodoApp.Business.Model

@model TaskModel

<div class="container">
    <div class="row shadow p-3 mb-5 bg-white rounded mt-5">
        <div class="col-6">
            <h4 class="mt-3">Add New Task</h4>
            <br />
            <form asp-controller="Home" asp-action="AddTask" method="post" class="mb-3">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <span class="text-danger">*</span>
                    <input asp-for="Title"
                           class="form-control"
                           placeholder="Input Title" />
                    @Html.ValidationMessageFor(x => x.Title, null, new { @class = "text-danger" })
                </div>
                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Content</label>
                    <span class="text-danger">*</span>
                    <textarea asp-for="Content"
                              class="form-control"
                              placeholder="Input Content"></textarea>
                    @Html.ValidationMessageFor(x => x.Content, null, new { @class = "text-danger" })
                </div>
                <div class="">
                    <button type="submit" class="btn btn-primary btn-sm">Add Task</button>
                    <a class="btn btn-secondary btn-sm" href="/Home">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}